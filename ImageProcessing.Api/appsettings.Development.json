{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Default": "Server=127.0.0.1;Port=3307;Database=myapp;User=myapp;Password=myapppass;TreatTinyAsBoolean=false;DefaultCommandTimeout=60;SslMode=None;AllowPublicKeyRetrieval=True;AllowUserVariables=true"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.MySql" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "MySql",
        "Args": {
          "connectionString": "Server=127.0.0.1;Port=3307;Database=myapp;User=myapp;Password=myapppass;TreatTinyAsBoolean=false;DefaultCommandTimeout=60;SslMode=None;AllowPublicKeyRetrieval=True",
          "tableName": "serilog_logs",
          "autoCreateTable": true,
          "batchPostingLimit": 50,
          "period": "00:00:02"
        }
      }
    ]
  },
  "Jwt": {
    "Issuer": "ImageProcessing",
    "Audience": "ImageProcessing.Client",
    "Key": "super-long-random-256-bit-key-change-me", // 32+ chars
    "AccessMinutes": 30,
    "RefreshDays": 14
  },
  "Redis": {
    "Configuration": "127.0.0.1:6379,password=myredispass,abortConnect=false,connectRetry=2"
  },
  "FileStorage": {
    "UploadPath": "uploads",
    "BaseUrl": "https://localhost:5292/uploads/"
  },
  "FFMPEG": {
    "FFMPEG_PATH": "C:\\tools\\ffmpeg\\bin\\ffmpeg.exe",
    "OUTPUT_SUBFOLDER": "uploads\\timelapses"
  }
}
